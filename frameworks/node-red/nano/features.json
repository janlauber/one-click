{
  "interfaces": [
    {
      "name":  "http",
      "port":  1880,
      "ingress": {
        "ingressClass": "nginx",
        "annotations": {
          "nginx.ingress.kubernetes.io/rewrite-target": "/",
          "nginx.ingress.kubernetes.io/ssl-redirect": "false"
        },
        "rules": {
          "host": "example.com",
          "path": "/",
          "tls": "false"
        }
      }
    }
  ],
  "scale": {
    "horizontalScale": {
      "maxReplicas": 1,
      "minReplicas": 1,
      "targetCPUUtilizationPercentage": 80
    },
    "resources": {
      "limits": {
        "cpu": "100m",
        "memory": "128Mi"
      },
      "requests": {
        "cpu": "100m",
        "memory": "128Mi"
      }
    }
  }
}